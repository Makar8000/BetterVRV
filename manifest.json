{
    "manifest_version": 2,
    "name": "BetterVRV",
    "version": "0.0.1",
    "description": "Suite of improvements to the VRV player and experience.",
    "permissions": ["tabs", "storage", "https://vrv.co/*"],
    "icons": {
        "705": "images/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://vrv.co/*"
            ],
            "css": [
                "injections/hideThumbnails.css"
            ],
        }
    ],
    "web_accessible_resources": [
        "images/*",
        "fonts/*",
        "injections/*"
    ]
}
