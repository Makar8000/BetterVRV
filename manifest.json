{
    "manifest_version": 2,
    "name": "BetterVRV",
    "version": "0.0.1",
    "description": "A suite of improvements to the VRV player and experience.",
    "permissions": ["activeTab", "storage", "https://vrv.co/*", "https://static.vrv.co/*"],
    "icons": {
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://vrv.co/*"
            ],
            "css": [
                "injections/hideThumbnails.css",
                "injections/hideDescriptions.css"
            ]
        },
        {
            "all_frames": true,
            "matches": [
                "https://static.vrv.co/vilos/player.html"
            ],
            "js": [
                "injections/player.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "images/*",
        "fonts/*",
        "injections/*"
    ]
}
