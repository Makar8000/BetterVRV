{
    "manifest_version": 2,
    "name": "BetterVRV",
    "version": "1.0",
    "description": "Suite of improvements to the VRV player and experience.",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "705": "icons/icon.png"
        }
    },
    "options_page": "options.html",
    "icons": {
        "705": "icons/icon.png"
    },
    "web_accessible_resources": [
        "icons/*.png",
        "styles/*",
        "fonts/*"
    ]
}
