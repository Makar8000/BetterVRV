{
    "manifest_version": 2,
    "name": "BetterVRV",
    "version": "1.0",
    "description": "Suite of improvements to the VRV player and experience.",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "content_scripts": [
        {
            "matches": ["https://vrv.co/*"],
            "js": [
                "options.js",
                "injections/no-spoilers.js"
            ],
            "css": ["injections/no-spoilers.css"]
        }
    ],
    "options_page": "interfaces/options.html",
    "icons": {
        "705": "images/icon.png"
    },
    "web_accessible_resources": [
        "images/*",
        "styles/*",
        "fonts/*",
        "options.js"
    ]
}
