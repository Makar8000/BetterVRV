{
    "manifest_version": 2,
    "name": "BetterVRV",
    "version": "1.0",
    "description": "Suite of improvements to the VRV player and experience.",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": [
            "js/settings.js",
            "js/bg_installed.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "interfaces/popup.html",
        "default_icon": {
            "705": "images/icon.png"
        }
    },
    "options_page": "interfaces/options.html",
    "icons": {
        "705": "images/icon.png"
    },
    "web_accessible_resources": [
        "images/*",
        "styles/*",
        "fonts/*"
    ]
}
