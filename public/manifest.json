{
    "manifest_version": 2,
    "name": "BetterVRV",
    "short_name": "BetterVRV",
    "version": "0.1.2",
    "description": "A suite of improvements to the VRV player and experience.",
    "homepage_url": "https://chrome.google.com/webstore/detail/bettervrv/dhghipbelapdpgpdfmkebjnnokhpeock",
    "permissions": ["activeTab", "storage"],
    "icons": {
        "128": "images/icon128.png"
    },
    "background": {
        "scripts": [
            "background/onInstall.js"
        ],
        "persistent": false
    },
    "options_page": "index.html",
    "content_scripts": [
        {
            "matches": [
                "https://vrv.co/*"
            ],
            "js": [
                "injections/lib.js",
                "injections/vrvStyling.js"
            ]
        },
        {
            "all_frames": true,
            "matches": [
                "https://static.vrv.co/vilos/player.html"
            ],
            "css": [
                "injections/css/playerStyling.css"
            ],
            "js": [
                "injections/lib.js",
                "injections/keycuts.js",
                "injections/playerStyling.js",
                "injections/player.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "images/*",
        "fonts/*",
        "injections/css/*"
    ],
    "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'"
}
